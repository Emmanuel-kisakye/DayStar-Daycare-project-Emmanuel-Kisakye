doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title sitter list
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet')
  style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
      }
      .navbar {
        background-color: #333;
        overflow: hidden;
      }
      .navbar ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: space-around;
      }
      .navbar li {
        float: right;
      }
      .navbar li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 20px;
        text-decoration: none;
      }
      .navbar li a:hover {
        background-color: #575757;
      }
      .dashboard {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        padding: 20px;
      }
      .container h2 a {
        margin-left:10px;
      }
  body
    .navbar
      ul
        li
          a(href='/') Dashboard
        li
          a(href='/BabyList') Babies
        li
          a(href='/sitterList') Sitters
        li
          a(href='/ProcurementList') Procurement
        li
          a(href='/dollList') Dollstore  
  body
    .container.mt-5
      h2.text-center ITEMS  
                     a.btn.btn-primary.btn-sm(href='/Procurement') Add Item
      table.table.table-striped
        thead.text-bg-dark
          tr
            th Item
            th Quantity
            th Price
            th Date of purchase
            th Done By
            th
           
        tbody
          if items.length
            each item in items
              tr
                td #{item.item}
                td #{item.quantity}
                td #{item.price}
                td #{item.date}
                td #{item.Person}
                td
              
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')
